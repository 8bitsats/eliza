{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.test.ts", 
    "src/components/**/*", 
    "frontend/**/*"
  ]
}
